{
  "name": "front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server",
    "build": "webpack -p -c ./webpack/webpack.config.js",
    "pretty": "prettier --write .",
    "commit": "git-cz",
    "lint:code": "eslint \"./**/*.{ts,tsx}\"",
    "lint:styles": "stylelint \"./**/*.css\"",
    "cosmos": "COSMOS=true cosmos",
    "cosmos:export": "COSMOS=true cosmos-export"
  },
  "dependencies": {
    "@logux/client": "^0.9.1",
    "effector": "^21.0.3",
    "effector-react": "^21.0.4",
    "patronum": "^0.103.1",
    "polished": "^3.5.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hook-form": "^5.4.1",
    "reakit": "^1.0.0-rc.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^13.11.0",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.0.4",
    "css-loader": "^3.6.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-unicorn": "^18.0.1",
    "fork-ts-checker-webpack-plugin": "^5.0.9",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "linaria": "^1.3.3",
    "lint-staged": "^10.1.3",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.4",
    "react-cosmos": "^5.2.1",
    "stylelint": "^13.3.1",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-recommended": "^3.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
