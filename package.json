{
  "name": "js-app-playground",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:AlexandrHoroshih/js-app-playground.git",
  "author": "Alexander Khoroshikh <xad71rus@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "back",
    "front"
  ],
  "scripts": {
    "commit": "git-cz",
    "front": "yarn workspace front",
    "back": "yarn workspace back",
    "front:start:dev": "yarn front dev",
    "back:start:dev": "yarn back start:dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
